<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg11"
    tools:context=".AssitantActivity">

    <ImageView
        android:id="@+id/iv_experts"
        android:layout_width="306dp"
        android:layout_height="205dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/iv1_brd"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.101" />

    <View
        android:id="@+id/v_experts"
        android:layout_width="294dp"
        android:layout_height="192dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="16dp"
        android:background="#88000000"
        app:layout_constraintBottom_toTopOf="@+id/iv_experts"
        app:layout_constraintEnd_toStartOf="@+id/iv_experts"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toEndOf="@+id/iv_experts"
        app:layout_constraintTop_toBottomOf="@+id/iv_experts"
        app:layout_constraintVertical_bias="0.546" />

    <TextView
        android:id="@+id/tv_experts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_experts"
        android:textColor="#FFF"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/iv_experts"
        app:layout_constraintEnd_toStartOf="@+id/iv_experts"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/iv_experts"
        app:layout_constraintTop_toBottomOf="@+id/iv_experts" />

    <ImageView
        android:id="@+id/iv_parents"
        android:layout_width="306dp"
        android:layout_height="205dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/iv2_brd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_experts"
        app:layout_constraintVertical_bias="0.252" />

    <View
        android:id="@+id/v_parents"
        android:layout_width="294dp"
        android:layout_height="192dp"
        android:background="#88000000"
        app:layout_constraintBottom_toTopOf="@+id/iv_parents"
        app:layout_constraintEnd_toStartOf="@+id/tv_parents"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_parents"
        app:layout_constraintTop_toBottomOf="@+id/iv_parents" />

    <TextView
        android:id="@+id/tv_parents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_parent"
        android:textColor="#FFF"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/iv_parents"
        app:layout_constraintEnd_toStartOf="@+id/iv_parents"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/iv_parents"
        app:layout_constraintTop_toBottomOf="@+id/iv_parents" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/admob_banner2_key"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>